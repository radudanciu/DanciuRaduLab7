<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanciuRaduLab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="m4.jpg"
                HeightRequest="250"
                Aspect="AspectFit"
                SemanticProperties.Description="BMW M4" />

            <Label
                Text="BMW M4: O combinație de performanță și stil"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Această mașină reprezintă idealul meu de performanță și design – un simbol al pasiunii pentru condus."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
